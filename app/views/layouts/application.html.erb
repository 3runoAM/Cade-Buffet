<!DOCTYPE html>
<html>
  <head>
    <title>CadeBuffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav id="nav">
      <h1><%= link_to "Cadê Buffet?", root_path %></h1>
      <ul>
        <% if user_signed_in? %>
          <% if current_user.role == 'owner' %>
          <li><%= link_to "Área do proprietário", owner_dashboards_path %></li>
          <% else %>
            <li><%= link_to "Área do cliente", root_path %></li>
          <% end %>
          <li><%= button_to 'Sair', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Cadastrar', new_user_registration_path %></li>
          <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>

    <%= notice %>
    <%= alert %>

    <%= yield %>
  </body>
</html>