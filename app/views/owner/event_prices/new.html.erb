<h1><%= @event.name %></h1>

<%= render partial: 'shared/errors_exhibition', locals: {model: @event_price} %>

<%= form_with model: [:owner, @event_price] do |price|%>
  <div>
    <%= price.label :standard_price %>
    <%= price.number_field :standard_price %>
  </div>
  <br/>

  <div>
    <%= price.label :extra_guest_price %>
    <%= price.number_field :extra_guest_price %>
  </div>
  <br/>

  <div>
    <%= price.label :extra_hour_price %>
    <%= price.number_field :extra_hour_price %>
  </div>
  <br/>

  <div>
    <%= price.label :day_type %>
    <%= price.collection_select :day_type, EventPrice.day_type_options, :first, :last %>
  </div>

  <%= price.hidden_field :event_id, value: @event.id %>

  <%= price.submit I18n.t("helpers.models.event_price.create"), data: { turbo: false }%>
<% end %>